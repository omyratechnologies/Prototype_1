# Enhanced RRStones Frontend Environment Configuration

# ====================
# API CONFIGURATION
# ====================

# Backend API Base URL
VITE_API_BASE_URL=http://localhost:5002/api

# Alternative backend URLs for different environments
# VITE_API_BASE_URL=https://api.rrstones.com/api  # Production
# VITE_API_BASE_URL=http://localhost:5001/api     # Development Alternative

# ====================
# AUTHENTICATION CONFIGURATION
# ====================

# JWT Token Configuration
VITE_JWT_SECRET=your-jwt-secret-key-here
VITE_TOKEN_EXPIRY=24h

# Session Configuration
VITE_SESSION_TIMEOUT=3600000  # 1 hour in milliseconds
VITE_REMEMBER_ME_DURATION=604800000  # 1 week in milliseconds

# ====================
# BUSINESS LOGIC CONFIGURATION
# ====================

# Default Business Rules
VITE_DEFAULT_PIECES_PER_CRATE=10
VITE_FILLER_RATE=0.5
VITE_MAX_SHIPPING_WEIGHT=48000
VITE_WEIGHT_UNIT=lbs

# Pricing Configuration
VITE_CURRENCY=INR
VITE_CURRENCY_SYMBOL=â‚¹
VITE_PRICE_DECIMAL_PLACES=2

# Tier Configuration
VITE_DEFAULT_TIER=T3
VITE_TIER_DISCOUNTS={"T1":20,"T2":15,"T3":10}

# ====================
# UI/UX CONFIGURATION
# ====================

# Pagination
VITE_DEFAULT_PAGE_SIZE=12
VITE_MAX_PAGE_SIZE=50

# Search Configuration
VITE_SEARCH_DEBOUNCE_MS=300
VITE_MIN_SEARCH_LENGTH=2

# Cart Configuration
VITE_CART_RESERVATION_TIMEOUT=900000  # 15 minutes in milliseconds
VITE_CART_AUTO_SAVE_INTERVAL=30000   # 30 seconds in milliseconds

# ====================
# FILE UPLOAD CONFIGURATION
# ====================

# Upload Limits
VITE_MAX_FILE_SIZE=10485760  # 10MB in bytes
VITE_MAX_FILES_PER_UPLOAD=5
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# ====================
# PERFORMANCE CONFIGURATION
# ====================

# Caching
VITE_CACHE_DURATION=300000  # 5 minutes in milliseconds
VITE_ENABLE_OFFLINE_CACHE=true

# Request Timeouts
VITE_API_TIMEOUT=10000  # 10 seconds in milliseconds
VITE_UPLOAD_TIMEOUT=30000  # 30 seconds in milliseconds

# ====================
# FEATURE FLAGS
# ====================

# Enhanced Features
VITE_ENABLE_ENHANCED_CART=true
VITE_ENABLE_BUSINESS_LOGIC=true
VITE_ENABLE_WEIGHT_VALIDATION=true
VITE_ENABLE_TIER_PRICING=true
VITE_ENABLE_FILLER_CALCULATION=true

# UI Features
VITE_ENABLE_DARK_MODE=false
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_TOOLTIPS=true
VITE_ENABLE_NOTIFICATIONS=true

# Admin Features
VITE_ENABLE_ADMIN_PANEL=false
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_REPORTS=false

# ====================
# DEVELOPMENT CONFIGURATION
# ====================

# Debug Settings
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=info  # error, warn, info, debug
VITE_ENABLE_CONSOLE_LOGS=true

# Development Tools
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_PERFORMANCE_MONITORING=false

# ====================
# ANALYTICS & MONITORING
# ====================

# Analytics
VITE_GOOGLE_ANALYTICS_ID=
VITE_FACEBOOK_PIXEL_ID=
VITE_HOTJAR_ID=

# Error Monitoring
VITE_SENTRY_DSN=
VITE_ENABLE_ERROR_REPORTING=false

# ====================
# SOCIAL & EXTERNAL INTEGRATIONS
# ====================

# Social Media
VITE_FACEBOOK_URL=
VITE_TWITTER_URL=
VITE_INSTAGRAM_URL=
VITE_LINKEDIN_URL=

# Contact Information
VITE_COMPANY_NAME=RRStones
VITE_COMPANY_EMAIL=info@rrstones.com
VITE_COMPANY_PHONE=+91-XXXXXXXXXX
VITE_COMPANY_ADDRESS=Your Company Address Here

# ====================
# SECURITY CONFIGURATION
# ====================

# CORS Configuration
VITE_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:4173

# Content Security Policy
VITE_CSP_ENABLED=true
VITE_CSP_REPORT_ONLY=true

# ====================
# BACKUP & RECOVERY
# ====================

# Local Storage Backup
VITE_ENABLE_LOCAL_BACKUP=true
VITE_BACKUP_INTERVAL=3600000  # 1 hour in milliseconds
VITE_MAX_BACKUP_SIZE=5242880  # 5MB in bytes

# ====================
# INTERNATIONALIZATION
# ====================

# Language Support
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,hi
VITE_ENABLE_RTL=false

# Currency & Region
VITE_DEFAULT_CURRENCY=INR
VITE_DEFAULT_REGION=IN
VITE_TIMEZONE=Asia/Kolkata

# ====================
# OPTIMIZATION SETTINGS
# ====================

# Image Optimization
VITE_IMAGE_QUALITY=85
VITE_ENABLE_WEBP=true
VITE_ENABLE_LAZY_LOADING=true

# Bundle Optimization
VITE_ENABLE_TREE_SHAKING=true
VITE_ENABLE_CODE_SPLITTING=true
VITE_CHUNK_SIZE_WARNING_LIMIT=1000

# ====================
# TESTING CONFIGURATION
# ====================

# Test Environment
VITE_TEST_API_URL=http://localhost:5002/api
VITE_TEST_USER_EMAIL=test@rrstones.com
VITE_TEST_USER_PASSWORD=testpassword123

# Mock Data
VITE_ENABLE_MOCK_DATA=false
VITE_MOCK_DELAY=500  # milliseconds